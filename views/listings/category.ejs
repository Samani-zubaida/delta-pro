<% layout("/layouts/boilerplate.ejs") %>

<% for(let listing of categories) { %>    
    <a href="/listings/<%= listing._id %>" class="listing-links">
      <div class="card listing-card" style="width: 20rem">
        <img
          src="<%=listing.image.url %>"
          class="card-img-top card-box"
          alt="..listing_img"
          style="height: 20rem"
        />
        <div class="card-img-overlay">
          <i class="fa-solid fa-location-dot"></i>
        </div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %><br /></b>
            Price: &#8377; <%=listing.price %>
            <i class="tax-info">+18% GST</i>
          </p>
        </div>
      </div>
    </a>
    <%}%>
  </div>