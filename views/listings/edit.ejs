<% layout("/layouts/boilerplate.ejs") %>
<div class="row">
  <div class="col-8 offset-2">
    <h3>Edit Listing</h3>
    <form
      method="POST"
      action="/listings/<%=listing._id%>?_method=PUT"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div>
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          value="<%=listing.title%>"
          name="listing[title]"
          class="form-control mb-3"
          required
        />
        <div class="invalid-feedback">Enter Title</div>
      </div>

      <div class="mb-3">
        <hr>
        <label for="image" class="form-label">orignal image</label><br>
        <img class="image-div" src= "<%= orignalUrl %>">
      </div>
      <hr>
      <div>
        <label for="image" class="form-label">Image</label>
        <input
          type="file"
          name="listing[image]"
          class="form-control mb-3"
        />
        <div class="invalid-feedback">Enter Image</div>
      </div>
      <div>
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          class="form-control mb-3"
          required
        >
<%=listing.description%></textarea
        >
        <div class="invalid-feedback">Enter Discription</div>
      </div>
      <div class="row">
        <div class="col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            type="text"
            value="<%=listing.price%>"
            name="listing[price]"
            class="form-control mb-3"
            required
          />
          <div class="invalid-feedback">Enter Price</div>
        </div>

        <div class="col-md-8">
          <label for="location" class="form-label">Location</label>
          <input
            type="text"
            value="<%=listing.location%>"
            name="listing[location]"
            class="form-control mb-3"
            required
          />
          <div class="invalid-feedback">Enter Location</div>
        </div>
      </div>
      <div>
        <label for="country" class="form-label">Country</label>
        <input
          type="text"
          value="<%=listing.country%>"
          name="listing[country]"
          class="form-control mb-3"
          required
        />
        <div class="invalid-feedback">Enter Country</div>
      </div>
      <button class="btn btn-dark btn-sm mb-4">Edit</button>
    </form>
  </div>
</div>
<script src="/js/script.js"></script>